<% form_for [@consumer, Product.new] do |f| %>

  <p>
    <%= f.label :Product %><br />
    <!-- %= f.text_field :product % -->
    <%= f.select(:product, options_for_select([['UPS', "UPS"], ['Battery', "Battery"], ['Stabilizer', "Stabilizer"], ['RO Plant', "RO Plant"], ['Solar Heater', "Solar Heater"], ['Solar PV Module', "Solar PV Module"]])) %>
  </p>
  <p>
    <%= f.label :Serial_no %><br />
    <%= f.text_field :slno %>
  </p>
  <p>
    <%= f.label :Model %><br />
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :Capacity %><br />
    <%= f.text_field :capacity %>
  </p>
  <p>
    <%= f.label :Date_Purchased %><br />
    <%= f.date_select :datepurchased %>
  </p>
  <p>
    <%= f.label :"warranty (in Months)" %><br />
    <%= f.text_field :warranty %>
  </p>
  <p>
    <%= f.label :Remark %><br />
    <%= f.text_area :remark, "rows" => 2, "cols" => 23 %>
  </p>
  <p>
    <%= submit_tag 'Create' %>
  </p>
<% end %>
